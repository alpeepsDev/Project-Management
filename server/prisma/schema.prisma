generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  MODERATOR
  USER
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ExchangeStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  name      String?
  role      UserRole @default(USER)
  avatar    String?
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  managedProjects    Project[]      @relation("ProjectManager")
  projectMemberships ProjectMember[]
  createdTasks       Task[]         @relation("TaskCreator")
  assignedTasks      Task[]         @relation("TaskAssignee")
  taskComments       TaskComment[]
  sentExchanges      TaskExchange[] @relation("ExchangeRequester")
  receivedExchanges  TaskExchange[] @relation("ExchangeReceiver")
  notifications      Notification[]
  apiLogs            ApiLog[]
  auditLogs          AuditLog[]
  rateLimit          UserRateLimit?

  @@map("users")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  managerId   String
  isActive    Boolean  @default(true)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  manager       User            @relation("ProjectManager", fields: [managerId], references: [id])
  members       ProjectMember[]
  tasks         Task[]
  notifications Notification[]

  @@map("projects")
}

model ProjectMember {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  joinedAt  DateTime @default(now())

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_members")
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String?
  status      TaskStatus   @default(PENDING)
  priority    TaskPriority @default(MEDIUM)
  projectId   String
  createdById String
  assigneeId  String?
  startDate   DateTime?    // For Gantt chart
  dueDate     DateTime?
  completedAt DateTime?
  position    Int          @default(0) // For Kanban ordering
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  project       Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy     User           @relation("TaskCreator", fields: [createdById], references: [id])
  assignee      User?          @relation("TaskAssignee", fields: [assigneeId], references: [id])
  comments      TaskComment[]
  exchanges     TaskExchange[]
  notifications Notification[]

  @@map("tasks")
}

model TaskComment {
  id        String   @id @default(cuid())
  content   String
  taskId    String
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author User @relation(fields: [authorId], references: [id])

  @@map("task_comments")
}

model TaskExchange {
  id           String         @id @default(cuid())
  taskId       String
  requesterId  String
  receiverId   String
  status       ExchangeStatus @default(PENDING)
  requestNote  String?
  responseNote String?
  requestedAt  DateTime       @default(now())
  respondedAt  DateTime?

  // Relations
  task      Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  requester User @relation("ExchangeRequester", fields: [requesterId], references: [id])
  receiver  User @relation("ExchangeReceiver", fields: [receiverId], references: [id])

  @@map("task_exchanges")
}

enum NotificationType {
  TASK_ASSIGNED
  TASK_UPDATED
  TASK_COMPLETED
  TASK_CHANGES_REQUESTED
  TASK_APPROVED
  TASK_EXCHANGE_REQUESTED
  TASK_EXCHANGE_ACCEPTED
  TASK_EXCHANGE_REJECTED
  PROJECT_ASSIGNED
}

model Notification {
  id          String           @id @default(cuid())
  type        NotificationType
  title       String
  message     String
  userId      String
  taskId      String?
  projectId   String?
  isRead      Boolean          @default(false)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task    Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// Admin Monitoring Models
model ApiLog {
  id           String   @id @default(cuid())
  userId       String?
  username     String?
  endpoint     String
  method       String
  statusCode   Int
  responseTime Int      // in milliseconds
  userAgent    String?
  ipAddress    String?
  timestamp    DateTime @default(now())
  
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([endpoint])
  @@index([timestamp])
  @@map("api_logs")
}

model RateLimitConfig {
  id        String   @id @default(cuid())
  role      UserRole @unique
  limit     Int      // requests per window
  window    Int      @default(3600) // time window in seconds (default 1 hour)
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("rate_limit_configs")
}

model UserRateLimit {
  id        String   @id @default(cuid())
  userId    String   @unique
  limit     Int      // custom requests per window for this user
  window    Int      @default(3600) // time window in seconds
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("user_rate_limits")
}

model EndpointRateLimit {
  id        String   @id @default(cuid())
  endpoint  String   // e.g., "/api/projects", "/api/tasks"
  method    String   // GET, POST, PUT, DELETE, or * for all methods
  limit     Int      // requests per window
  window    Int      @default(60) // time window in seconds (default 1 minute)
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([endpoint, method])
  @@map("endpoint_rate_limits")
}

model SystemHealthLog {
  id                String   @id @default(cuid())
  cpuUsage          Float
  memoryUsage       Float
  totalMemory       Float
  freeMemory        Float
  uptime            Float
  activeConnections Int
  timestamp         DateTime @default(now())
  
  @@index([timestamp])
  @@map("system_health_logs")
}

model AuditLog {
  id        String   @id @default(cuid())
  adminId   String
  action    String   // e.g., "USER_DEACTIVATED", "ROLE_CHANGED", "RATE_LIMIT_UPDATED"
  targetId  String?  // userId, configId, etc.
  details   Json?    // Additional details about the action
  timestamp DateTime @default(now())
  
  admin User @relation(fields: [adminId], references: [id], onDelete: Cascade)
  
  @@index([adminId])
  @@index([timestamp])
  @@map("audit_logs")
}
